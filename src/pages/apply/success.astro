---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { AstroSeo } from '@astrolib/seo';
import SuccessMessage from '../../components/forms/Success.astro';
---

<AstroSeo
  title="Success!"
  description="Success!"
  canonical="https://www.dxmentorship.com"
  openGraph={{
    url: 'https://www.dxmentorship.com',
    title: 'Success',
    description: 'Your application has been submitted successfully!',
    images: [
      {
        url: '/opengraph/socialog.png',
        width: 1200,
        height: 630,
        alt: 'Social open graph',
        type: 'image/jpeg',
      },
      {
        url: '/opengraph/socialog.png',
        width: 4096,
        height: 4096,
        alt: 'Twitter open graph',
        type: 'image/jpeg',
      },
      { url: '/opengraph/socialog.png' },
      { url: '/opengraph/socialog.png' },
    ],
    site_name: 'DX Mentorship',
  }}
  twitter={{
    handle: '@dxmentorship',
    site: '@site',
    cardType: 'summary_large_image',
  }}
/>
<BaseLayout>
  <section class="">
    <SuccessMessage />
  </section>
</BaseLayout>
